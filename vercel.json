{
    "builds": [
      {
        "src": "ecommerce_zone_spark/wsgi.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "15mb", "runtime": "python3.12" }
      }
    ],
    "routes": [
      {
        "src": "/static/(.*)",
        "dest": "/static/$1"
      },
      {
        "src": "/(.*)",
        "dest": "ecommerce_zone_spark/wsgi.py"
      }
    ],
    "scripts": {
      "build": "python manage.py migrate && python manage.py collectstatic --noinput"
    }
  }
  